def collect_audience_votes(stage="before"):
    print(f"\nğŸ“Š Audience Polling ({stage.upper()} the debate):")
    print("Please vote your initial opinion on the topic:")
    print("1. FOR")
    print("2. AGAINST")
    print("3. NEUTRAL / UNDECIDED")

    votes = {"for": 0, "against": 0, "neutral": 0}
    num_voters = int(input("ğŸ‘¥ Enter number of audience members voting: "))

    for i in range(num_voters):
        while True:
            try:
                vote = int(input(f"ğŸ§‘ Audience Member {i+1}, your vote (1/2/3): "))
                if vote == 1:
                    votes["for"] += 1
                    break
                elif vote == 2:
                    votes["against"] += 1
                    break
                elif vote == 3:
                    votes["neutral"] += 1
                    break
                else:
                    print("âŒ Invalid vote. Please enter 1, 2, or 3.")
            except ValueError:
                print("âš ï¸ Please enter a number.")

    print(f"\nâœ… Results ({stage.upper()} Debate):")
    print(f"ğŸŸ© FOR: {votes['for']}")
    print(f"ğŸŸ¥ AGAINST: {votes['against']}")
    print(f"ğŸŸ¨ NEUTRAL: {votes['neutral']}")
    return votes
